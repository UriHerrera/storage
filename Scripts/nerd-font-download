# -- Exit on errors.

set -euo pipefail


# -- Functions.

die() { printf 'Error: %s\n' "$*" >&2; exit 1; }
need() { command -v "$1" >/dev/null 2>&1 || die "Missing dependency: $1"; }


# -- Check dependencies.

for dep in curl unzip fc-cache jq; do need "$dep"; done

FONT="${1:-}"
[ -z "$FONT" ] && die "Usage: ${0##*/} <FontName> [--mono|--propo] [--tag <tag>]"

VARIANT=""
TAG="latest"
shift || true

while [[ $# -gt 0 ]]; do
  case "$1" in
    --mono)  VARIANT="Mono"; shift ;;
    --propo) VARIANT="Propo"; shift ;;
    --tag)   TAG="${2:-}"; [[ -n "$TAG" ]] || die "Missing value for --tag"; shift 2 ;;
    -h|--help) printf 'Usage: %s <FontName> [--mono|--propo] [--tag <tag>]\n' "${0##*/}"; exit 0 ;;
    *) die "Unknown argument: $1" ;;
  esac
done

ASSET="${FONT}${VARIANT}.zip"
API_BASE="https://api.github.com/repos/ryanoasis/nerd-fonts/releases"
ENDPOINT=$([[ "$TAG" == "latest" ]] && echo "latest" || echo "tags/$TAG")


# -- Extraction.

URL=$(curl -fsSL --compressed "$API_BASE/$ENDPOINT" | \
      jq -r ".assets[] | select(.name == \"$ASSET\") | .browser_download_url")

[[ -n "$URL" && "$URL" != "null" ]] || die "Asset not found: $ASSET (check font name/variant/tag)"

DEST_DIR="${XDG_DATA_HOME:-$HOME/.local/share}/fonts/NerdFonts/$FONT"
TMP_DIR=$(mktemp -d)
trap 'rm -rf "$TMP_DIR"' EXIT INT TERM

ZIP_PATH="$TMP_DIR/$ASSET"
curl -fL --retry 3 --retry-delay 2 -o "$ZIP_PATH" "$URL"

mkdir -p "$DEST_DIR"
unzip -oq "$ZIP_PATH" -d "$DEST_DIR"


# -- Cleaunp.

find "$DEST_DIR" -type f ! \( -name "*.[o|t]tf" -o -name "*.woff*" \) -delete


# -- Update font cache.

fc-cache -f "$DEST_DIR" >/dev/null 2>&1

printf 'Successfully installed: %s\n' "$ASSET"
